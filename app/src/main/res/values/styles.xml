<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Styles for bold text-->
    <style name="BoldText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Styles for normal text-->
    <style name="NormalText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="NormalXLargeText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="PreferencesTheme">
        <item name="android:windowBackground">@drawable/bg2</item>
        <item name="android:background">@drawable/bg2</item>
    </style>


</resources>
